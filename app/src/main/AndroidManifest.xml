<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.maryallisonabad.daemondash2015" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/save_money_logo"
        android:label="$ave"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
        <activity
            android:name=".MainDisplayPageActivity"
            android:label="@string/title_activity_main_display_page" >
        </activity>
        <activity
            android:name=".SavingsActivity"
            android:label="@string/title_activity_savings" >
        </activity>
        <activity
            android:name=".SpendingActivity"
            android:label="@string/title_activity_spending" >
        </activity>
        <activity
            android:name=".RedeemActivity"
            android:label="@string/title_activity_redeem" >
        </activity>
        <activity
            android:name=".BudgetActivity"
            android:label="@string/title_activity_budget" >
        </activity>
        <activity
            android:name=".ChipotleActivity"
            android:label="@string/title_activity_chipotle"
            android:parentActivityName=".RedeemActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.maryallisonabad.daemondash2015.RedeemActivity" />
        </activity>
    </application>

</manifest>
